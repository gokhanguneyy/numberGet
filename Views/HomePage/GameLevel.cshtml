 @model numberGet.Models.HomePageModels.BeforeStartingGameModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Number Guess Game - Start</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .game-container {
            max-width: 400px;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="game-container">
        <h2 class="mb-4">WELCOME TO THE NUMBER GUESS GAME</h2>

        <form asp-action="GameLevel" asp-controller="HomePage" method="post">
            <div class="mb-3">
                <label asp-for="GameDifficultyLevel" class="form-label"><strong>Zorluk Seviyesini Seçiniz</strong></label>
                <select asp-for="GameDifficultyLevel" class="form-select" required>
                    <option selected disabled>Seçiniz</option>
                    <option value="EASY">EASY</option>
                    <option value="MEDIUM">MEDIUM</option>
                    <option value="HARD">HARD</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary w-100">Oyuna Başla</button>
        </form>
    </div>

</body>
</html>
