@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Number Guess Game - Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        .login-container {
            max-width: 400px;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .guest-btn {
            background-color: #6c757d;
            border: none;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <h2 class="mb-4">WELCOME TO THE NUMBER GUESS GAME</h2>
        <h4>LOGIN</h4>

        <form method="post" action="/Home/Login">
            <div class="mb-3">
                <label for="email" class="form-label">E-Posta</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="E-Postanızı girin" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Şifrenizi girin" required>
            </div>

            <button type="submit" onclick="showMessage()" class="btn btn-primary w-100">Giriş Yap</button>
        </form>

        <div class="mt-3">
            @* <a href="/Home/ForgotPassword" onclick="showMessage()">Şifrenizi mi unuttunuz?</a> *@
            <a href="" onclick="showMessage()">Şifrenizi mi unuttunuz?</a>
        </div>

        @* <form method="post" action="/HomePage/FromHomeToRegisterPage"> *@
            <div class="mt-2">    
                <a asp-controller ="HomePage" asp-action="FromHomeToRegisterPage">Hesabınız yok mu? Kayıt Ol</a>
            </div>
        @* </form>  *@
        

        <form method="post" action="/HomePage/FromHomeToGameLevel">
            <div class="mt-4">
                <button class="btn btn-secondary guest-btn w-100">Play As Guest</button>
            </div>
        </form>
    </div>

</body>
</html>

<script>
    function showMessage(){
        alert("YOU CAN JUST PLAY GUEST MODE");
    }
</script>
